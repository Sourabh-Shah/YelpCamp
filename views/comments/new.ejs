<%- include ("../partials/header") %>
<div class = "container">
	<div class="row">
		<h1 style="text-align:center">Create a New Comment <%= campground.name %></h1>
		<div style="width:30% ; margin :25px auto;">
			<form method="POST" action ="/campgrounds/<%= campground._id%>/comments">
			<div class="form-group"><input type="text" name ="comment[text]" placeholder="text" class="form-control">
			</div>
			<div class="form-group"><input type = "text" name = "comment[author]" placeholder = "author" class="form-control">
			</div>
			<div class="form-group"><button class="btn btn-lg btn-primary btn-block">Submit</button>
			</div>	
			</form>
			<a href="/campgrounds">Go Back</a>
		</div>	
	</div>
</div>
<%- include ("../partials/footer") %>